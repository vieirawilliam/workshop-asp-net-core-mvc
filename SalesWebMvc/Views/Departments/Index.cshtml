@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Cadastro de Departamentos";
}

<h2>Departamentos</h2>


<div class="well">
    <p>
        <a asp-action="Create" class="btn btn-default">Novo</a>
        <a asp-action="Edit"  class="btn btn-default">Alterar</a>
        <a asp-action="Details" class="btn btn-default">Listar</a>
        <a asp-action="Delete"  class="btn btn-danger">Deletar</a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
