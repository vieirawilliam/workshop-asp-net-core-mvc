@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Cadastro de Departamentos";
}

<h2>Departamentos</h2>


<div class="well">
    <p>
        <a asp-action="Create" class="btn btn-primary">Novo</a>

    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
